#!/bin/bash

default=$1; prompt=$2; question=${3:-". Proceed?"}
if [[ $default == "y" || $default == "yes" || $default == "ok" ]]; then
    dflt="Y/n"
else
    dflt="y/N"
fi

read -p "${prompt}${question} (${dflt}): " answer
answer=${answer:-${default}}

if [[ ${answer,,} == "y" || ${answer,,} == "yes" || ${answer,,} == "ok" ]]; then
    exit 0
else
    exit 1
fi
