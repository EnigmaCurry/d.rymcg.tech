#!/usr/bin/env bash

# Find project URL
# Find saved username/password
# Open URL in browser
## Optional arguments override URL parts:
## $1 path
## $2 host
## $3 protocol (https)

BIN=$(dirname ${BASH_SOURCE})
source ${BIN}/funcs.sh

URL=$(${BIN}/get_instance_url "$@")

if which xdg-open >/dev/null 2>&1; then
    (set -x; xdg-open "${URL}")
else
    echo "xdg-open not found"
    echo "URL: ${URL}"
fi
