ROOT_DIR = ..
include ${ROOT_DIR}/_scripts/Makefile.projects
include ${ROOT_DIR}/_scripts/Makefile.instance

.PHONY: config-hook
config-hook:
#### This interactive configuration wizard creates the .env_{DOCKER_CONTEXT}_{INSTANCE} config file using .env-dist as the template:
#### reconfigure_ask asks the user a question to set the variable into the .env file, and with a provided default value.
#### reconfigure sets the value of a variable in the .env file without asking.
#### reconfigure_htpasswd will configure the HTTP Basic Authentication setting the var name and with a provided default value.
	@${BIN}/reconfigure ${ENV_FILE} FIREFOX_INSTANCE=$${instance:-default}
	@${BIN}/reconfigure_wireguard_instance ${ENV_FILE} FIREFOX_WIREGUARD_INSTANCE "Choose the wireguard instance to use as the default gateway"

	@echo
	@WG=$$(${BIN}/dotenv -f ${ENV_FILE} get FIREFOX_WIREGUARD_INSTANCE); if [[ -n "$${WG}" ]]; then echo "## Finding the IPv4 address of wireguard instance: $${WG}" && ${BIN}/reconfigure ${ENV_FILE} FIREFOX_WIREGUARD_ROUTER_IPV4=$$(docker exec wireguard_$${WG}-wireguard-1 ip -j -4 addr show dev eth0 | jq -r '.[0].addr_info[0].local') && echo; fi
	@WG=$$(${BIN}/dotenv -f ${ENV_FILE} get FIREFOX_WIREGUARD_INSTANCE); if [[ -n "$${WG}" ]]; then echo "## Finding the IPv6 address of wireguard instance: $${WG}" && ${BIN}/reconfigure ${ENV_FILE} FIREFOX_WIREGUARD_ROUTER_IPV6=$$(docker exec wireguard_$${WG}-wireguard-1 ip -j -6 addr show dev eth0 | jq -r '.[0].addr_info[0].local') && echo; fi

	@${BIN}/reconfigure_ask ${ENV_FILE} FIREFOX_DOWNLOAD_VOLUME "Enter the absolute host path to store downloads"

	@${BIN}/reconfigure_ask ${ENV_FILE} FIREFOX_TRAEFIK_HOST "Enter the firefox domain name" firefox${INSTANCE_URL_SUFFIX}.${ROOT_DOMAIN}
	@${BIN}/reconfigure_auth ${ENV_FILE} FIREFOX
	@echo ""

.PHONY: override-hook
override-hook:
#### This sets the override template variables for docker-compose.instance.yaml:
#### The template dynamically renders to docker-compose.override_{DOCKER_CONTEXT}_{INSTANCE}.yaml
#### These settings are used to automatically generate the service container labels, and traefik config, inside the template.
#### The variable arguments have three forms: `=` `=:` `=@`
####   name=VARIABLE_NAME    # sets the template 'name' field to the value of VARIABLE_NAME found in the .env file
####                         # (this hardcodes the value into docker-compose.override.yaml)
####   name=:VARIABLE_NAME   # sets the template 'name' field to the literal string 'VARIABLE_NAME'
####                         # (this hardcodes the string into docker-compose.override.yaml)
####   name=@VARIABLE_NAME   # sets the template 'name' field to the literal string '${VARIABLE_NAME}'
####                         # (used for regular docker-compose expansion of env vars by name.)
	@${BIN}/docker_compose_override ${ENV_FILE} project=:firefox instance=@FIREFOX_INSTANCE traefik_host=@FIREFOX_TRAEFIK_HOST http_auth=FIREFOX_HTTP_AUTH http_auth_var=@FIREFOX_HTTP_AUTH ip_sourcerange=@FIREFOX_IP_SOURCERANGE oauth2=FIREFOX_OAUTH2 authorized_group=FIREFOX_OAUTH2_AUTHORIZED_GROUP enable_mtls_auth=FIREFOX_MTLS_AUTH mtls_authorized_certs=FIREFOX_MTLS_AUTHORIZED_CERTS homepage_labels_enable=FIREFOX_HOMEPAGE_LABELS_ENABLE homepage_group_firefox=FIREFOX_HOMEPAGE_GROUP_FIREFOX homepage_name_firefox=FIREFOX_HOMEPAGE_NAME_FIREFOX homepage_icon_firefox=FIREFOX_HOMEPAGE_ICON_FIREFOX homepage_description_firefox=FIREFOX_HOMEPAGE_DESCRIPTION_FIREFOX homepage_show_stats_firefox=FIREFOX_HOMEPAGE_SHOW_STATS_FIREFOX wireguard_instance=FIREFOX_WIREGUARD_INSTANCE traefik_entrypoint=FIREFOX_TRAEFIK_ENTRYPOINT

.PHONY: shell # Enter container shell
shell:
	@make --no-print-directory docker-compose-shell SERVICE=firefox

.PHONY: install-hook
install-hook:
	@echo

.PHONY: install-hook-pre
install-hook-pre:
	@echo

.PHONY: build-hook-pre
build-hook-pre:
	@(echo "#!/usr/bin/env sh" && echo "### This file is generated by the Makefile's install-hook-pre target." && echo "### DO NOT EDIT this file." && echo "### Modify the source in ${BIN}/app-router-bootstrap-entrypoint.sh instead.") > firefox/app-router-bootstrap.sh
	cat ${BIN}/app-router-bootstrap-entrypoint.sh >> firefox/app-router-bootstrap.sh
