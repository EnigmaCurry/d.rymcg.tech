NTFY_TRAEFIK_HOST=ntfy.example.com
NTFY_IP_SOURCERANGE=0.0.0.0/0

NTFY_INSTANCE=

# Filter access by IP address source range (CIDR):
##Disallow all access: 0.0.0.0/32
##Allow all access: 0.0.0.0/0
NTFY_IP_SOURCERANGE=0.0.0.0/0

# Mutual TLS (mTLS):
# Set true or false. If true, all clients must present a certificate signed by Step-CA:
NTFY_MTLS_AUTH=false
# Enter a comma separated list of client domains allowed to connect via mTLS.
# Wildcards are allowed and encouraged on a per-app basis:
NTFY_MTLS_AUTHORIZED_CERTS=*.clients.ntfy.example.com

NTFY_AUTH_DEFAULT_ACCESS=write-only
NTFY_ATTACHMENT_TOTAL_SIZE_LIMIT=5G
NTFY_ATTACHMENT_FILE_SIZE_LIMIT=15M
NTFY_ATTACHMENT_EXPIRY_DURATION=3h
NTFY_KEEPALIVE_INTERVAL=45s

NTFY_SMTP_SENDER_ADDR=
NTFY_SMTP_SENDER_USER=
NTFY_SMTP_SENDER_PASS=
NTFY_SMTP_SENDER_FROM=
NTFY_SMTP_SERVER_LISTEN=
NTFY_SMTP_SERVER_DOMAIN=
NTFY_SMTP_SERVER_ADDR_PREFIX=ntfy-

NTFY_IMAGE=binwiederhier/ntfy
## https://github.com/vmware-tanzu/carvel-ytt/releases

NTFY_CONFIG_YTT_VERSION=v0.51.0

# META:
# PREFIX=NTFY

