ROOT_DIR = ..
include ${ROOT_DIR}/_scripts/Makefile.projects-custom-build
include ${ROOT_DIR}/_scripts/Makefile.instance

.PHONY: build
build:
	make --no-print-directory docker-compose-build EXTRA_ARGS="${EXTRA_ARGS}" DOCKER_BUILDKIT=0

.PHONY: config-hook
config-hook:
#### This interactive configuration wizard creates the .env_{DOCKER_CONTEXT}_{INSTANCE} config file using .env-dist as the template:
#### reconfigure_ask asks the user a question to set the variable into the .env file, and with a provided default value.
#### reconfigure sets the value of a variable in the .env file without asking.
#### reconfigure_htpasswd will configure the HTTP Basic Authentication setting the var name and with a provided default value.
	@${BIN}/reconfigure ${ENV_FILE} WEBTOP_INSTANCE=$${instance:-default}
	@${BIN}/reconfigure_wireguard_instance ${ENV_FILE} WEBTOP_WIREGUARD_INSTANCE "Choose the wireguard instance to use as the default gateway"

	@echo
	@WG=$$(${BIN}/dotenv -f ${ENV_FILE} get WEBTOP_WIREGUARD_INSTANCE); if [[ -n "$${WG}" ]]; then echo "## Finding the IPv4 address of wireguard instance: $${WG}" && ${BIN}/reconfigure ${ENV_FILE} WEBTOP_WIREGUARD_ROUTER_IPV4=$$(docker exec wireguard_$${WG}-wireguard-1 ip -j -4 addr show dev eth0 | jq -r '.[0].addr_info[0].local') && echo; fi
	@WG=$$(${BIN}/dotenv -f ${ENV_FILE} get WEBTOP_WIREGUARD_INSTANCE); if [[ -n "$${WG}" ]]; then echo "## Finding the IPv6 address of wireguard instance: $${WG}" && ${BIN}/reconfigure ${ENV_FILE} WEBTOP_WIREGUARD_ROUTER_IPV6=$$(docker exec wireguard_$${WG}-wireguard-1 ip -j -6 addr show dev eth0 | jq -r '.[0].addr_info[0].local') && echo; fi

	@/bin/env bash ./reconfigure_webtop_image ${ENV_FILE} WEBTOP_DOWNLOAD_VOLUME "Enter the absolute host path to store downloads"
	@ALLOW_BLANK=1 ${BIN}/reconfigure_ask ${ENV_FILE} WEBTOP_INSTALL_PACKAGES "Enter a list of extra packages to install, separated by \`|\`, no spaces. (Leave blank to install no extra packages)"
	@echo
	@${BIN}/reconfigure_ask ${ENV_FILE} WEBTOP_DOWNLOAD_VOLUME "Enter the absolute host path to store downloads"

	@${BIN}/reconfigure_ask ${ENV_FILE} WEBTOP_TRAEFIK_HOST "Enter the webtop domain name" webtop${INSTANCE_URL_SUFFIX}.${ROOT_DOMAIN}
	@${BIN}/reconfigure_auth ${ENV_FILE} WEBTOP
	@echo ""

.PHONY: override-hook
override-hook:
#### This sets the override template variables for docker-compose.instance.yaml:
#### The template dynamically renders to docker-compose.override_{DOCKER_CONTEXT}_{INSTANCE}.yaml
#### These settings are used to automatically generate the service container labels, and traefik config, inside the template.
#### The variable arguments have three forms: `=` `=:` `=@`
####   name=VARIABLE_NAME    # sets the template 'name' field to the value of VARIABLE_NAME found in the .env file
####                         # (this hardcodes the value into docker-compose.override.yaml)
####   name=:VARIABLE_NAME   # sets the template 'name' field to the literal string 'VARIABLE_NAME'
####                         # (this hardcodes the string into docker-compose.override.yaml)
####   name=@VARIABLE_NAME   # sets the template 'name' field to the literal string '${VARIABLE_NAME}'
####                         # (used for regular docker-compose expansion of env vars by name.)
	@${BIN}/docker_compose_override ${ENV_FILE} project=:webtop instance=@WEBTOP_INSTANCE traefik_host=@WEBTOP_TRAEFIK_HOST http_auth=WEBTOP_HTTP_AUTH http_auth_var=@WEBTOP_HTTP_AUTH ip_sourcerange=@WEBTOP_IP_SOURCERANGE oauth2=WEBTOP_OAUTH2 authorized_group=WEBTOP_OAUTH2_AUTHORIZED_GROUP enable_mtls_auth=WEBTOP_MTLS_AUTH mtls_authorized_certs=WEBTOP_MTLS_AUTHORIZED_CERTS homepage_labels_enable=WEBTOP_HOMEPAGE_LABELS_ENABLE homepage_group_webtop=WEBTOP_HOMEPAGE_GROUP_WEBTOP homepage_name_webtop=WEBTOP_HOMEPAGE_NAME_WEBTOP homepage_icon_webtop=WEBTOP_HOMEPAGE_ICON_WEBTOP homepage_description_webtop=WEBTOP_HOMEPAGE_DESCRIPTION_WEBTOP homepage_show_stats_webtop=WEBTOP_HOMEPAGE_SHOW_STATS_WEBTOP wireguard_instance=WEBTOP_WIREGUARD_INSTANCE traefik_entrypoint=WEBTOP_TRAEFIK_ENTRYPOINT

.PHONY: shell # Enter container shell
shell:
	@make --no-print-directory docker-compose-shell SERVICE=webtop

.PHONY: install-hook
install-hook:
	@echo

.PHONY: install-hook-pre
install-hook-pre:
	@echo

.PHONY: build-hook-pre
build-hook-pre:
	@(echo "#!/usr/bin/env sh" && echo "### This file is generated by the Makefile's install-hook-pre target." && echo "### DO NOT EDIT this file." && echo "### Modify the source in ${BIN}/app-router-bootstrap-entrypoint.sh instead.") > webtop/app-router-bootstrap.sh
	cat ${BIN}/app-router-bootstrap-entrypoint.sh >> webtop/app-router-bootstrap.sh
